{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "./src/*.ts",
        "./src/**/*.ts",
        "./utils/*.ts"
    ],
    "files.exclude": {
        "**/node_modules": true
    }
}